// --------------------------------------
// PRISMA SCHEMA — MODO DESARROLLO
// --------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

//
// ENUMS
//

enum Taste {
  VEGGIE
  CARNE
}

//
// MODELOS
//

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  taste     Taste    @default(CARNE)

  orders Order[]
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  category    String
  image       String?
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]

  @@map("menu_items")
}

model Order {
  id String @id @default(cuid())

  // Relación con usuario
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  total     Int
  status    OrderStatus @default(PENDING)
  address   String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  items OrderItem[]
}

model OrderItem {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  quantity   Int
  unitPrice  Int
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}
